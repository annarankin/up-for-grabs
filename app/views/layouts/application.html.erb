  <section class="welcome intro-text pure-u-1">
    <h1>Welcome, {{name}}!</h1>
  </section>
  <section class="pure-g">
    <nav class="menu-list pure-menu pure-u-1 pure-u-md-1-4 ">
      <ul class="menu-ul pure-menu-list">
        <li class="menu-item pure-menu-item"><a class="pure-menu-link" href="/#">Profile</a></li>
